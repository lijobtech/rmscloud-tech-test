{
  "compilerOptions": {
    "lib": ["ES2022","DOM"],
    "target": "es6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./",
    "outDir": "dist",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "sourceMap": true,
  },
  "include": ["src/**/*.ts", "playwright.config.ts"],
  "exclude": ["node_modules"]
}